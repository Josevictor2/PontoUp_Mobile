{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@types/*": ["src/types/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@contexts/*": ["src/contexts/*"],
      "@helpers/*": ["src/helpers/*"],
      "@hooks/*": ["src/hooks/*"],
      "@routes/*": ["src/routes/*"],
      "@screens/*": ["src/screens/*"],
      "@animations/*": ["src/animations/*"],
      "@services/*": ["src/services/*"],
      "@theme/*": ["src/theme/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
